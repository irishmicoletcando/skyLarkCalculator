<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/numbersFontColor</item>
        <item name="android:onClick">numberAction</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/operationsBackgroundColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/operationsFontColor</item>
        <item name="android:onClick">operationAction</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="buttonEqualsAndAC">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/equalsAndACBackgroundColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">operationAction</item>
        <item name="cornerRadius">50dp</item>
    </style>

</resources>